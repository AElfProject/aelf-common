<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <RootNamespace>AElf</RootNamespace>
        <PackageId>AElf.Types</PackageId>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Google.Protobuf" Version="3.7.0" />
    </ItemGroup>
    <ItemGroup>
        <None Include="..\..\protobuf\aelf\core.proto">
            <Link>Protobuf/core.proto</Link>
        </None>
    </ItemGroup>
    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
        <Exec Command="protoc --proto_path=../../protobuf/aelf --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs core.proto" />
    </Target>
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Compile Include="./Protobuf/Generated/*.g.cs" />
        </ItemGroup>
    </Target>
</Project>
